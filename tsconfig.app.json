{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@src/*": [
        "src/*.web",
        "src/*"
      ],
      "@common/*": ["src/app/common/*"],
      "@file-explorer/*": ["src/app/file-explorer/*"],
      "@utils/*": ["src/app/utils/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}